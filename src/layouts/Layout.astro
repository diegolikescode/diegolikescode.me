---
import { SEO } from 'astro-seo'
import Footer from '@components/footer.astro'
import Navbar from '@components/navbar/navbar.astro'
import '@fontsource-variable/inter/index.css'

export interface Props {
    title: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString()

const resolvedImageWithDomain = new URL('/opengraph.jpg', Astro.site).toString()

const { title } = Astro.props

const makeTitle = title ? title + ' | ' + 'diegolikescode' : 'diegolikescode'
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/astronaut.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
        <SEO
            title={makeTitle}
            description="Diego, a web developer who do freelance work for clients all around the world."
            canonical={canonicalURL}
            twitter={{
                creator: '@diegolikescode',
                site: '@diegolikescode',
                card: 'summary_large_image',
            }}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: 'website',
                    title: `diego - a web developer who do freelance work`,
                    image: resolvedImageWithDomain,
                },
                image: {
                    alt: 'diegolikescode-Homepage-Screenshot-web-developer',
                },
            }}
        />
    </head>
    <body>
        <Navbar />
        <slot />
        <Footer />
        <style is:global>
            /* Improve Page speed */
            /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
            img {
                content-visibility: auto;
            }
        </style>
    </body>
</html>
