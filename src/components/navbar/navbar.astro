---
import Container from "@components/container.astro";
import { Astronav } from "astro-navbar";
import { Image } from "@astrojs/image/components";

import GitHub from "../../assets/github.png";
import LinkedIn from "../../assets/linkedin.png";
import Twitter from "../../assets/twitter.png";

---

<Container>
    <header class="flex flex-col lg:flex-row justify-between items-center my-5">
        <Astronav>
            <div class="flex w-full lg:w-auto items-center justify-center">
                <div></div>
                <div class="flex flex-col">
                    <a href="/" class="text-lg"><span class="font-bold text-2xl">diegolikescode</span></a>
                    <div class="flex gap-4">
                        <a
                            class="lg:hidden"
                            href="https://github.com/diegolikescode"
                            target="_blank">
                            <Image class="w-14" src={GitHub} alt="my Twitter profile" />
                        </a>
                        <a
                            class="lg:hidden"
                            href="https://twitter.com/diegolikescode"
                            target="_blank">
                            <Image class="w-14" src={Twitter} alt="my Twitter profile" />
                        </a>
                        <a
                            class="lg:hidden"
                            href="https://www.linkedin.com/in/diegolikescode/"
                            target="_blank">
                            <Image class="w-14" src={LinkedIn} alt="my LinkedIn profile" />
                        </a>
                    </div>
                </div>
            </div>
        </Astronav>
        <div>
            <div class="hidden lg:flex items-center gap-4">
                <a href="https://github.com/diegolikescode" target="_blank">
                    <Image class="w-14" src={GitHub} alt="my Twitter profile" />
                </a>
                <a href="https://twitter.com/diegolikescode" target="_blank">
                    <Image class="w-14" src={Twitter} alt="my Twitter profile" />
                </a>
                <a href="https://www.linkedin.com/in/diegolikescode/" target="_blank">
                    <Image class="w-14" src={LinkedIn} alt="my LinkedIn profile" />
                </a>
            </div>
        </div>
    </header>
</Container>

