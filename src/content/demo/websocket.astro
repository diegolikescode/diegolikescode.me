---
import Layout from '@layouts/Layout.astro'
import Container from '@components/container.astro'
import Sectionhead from '@components/sectionhead.astro'
import Game from '@components/websocket-game/game'
---

<Layout title="Websocket">
    <Container>
        <Sectionhead>
            <Fragment slot="title">Websocket Multiplayer Game</Fragment>
            <Fragment slot="desc" class="relative inline-block">
                You can play with another player by opening in both sessions in another browser or incognito mode
            </Fragment>
        </Sectionhead>
        <Game client:only></Game>
    </Container>
</Layout>
